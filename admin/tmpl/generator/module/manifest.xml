<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" client="{{client}}" method="upgrade">
    <name>{{element}}</name>
    <version>{{version}}</version>
    <description>{{description}}</description>
    <author>{{author}}</author>
    <creationDate>{{creationDate}}</creationDate>
    <copyright>{{copyright}}</copyright>
    <license>{{license}}</license>
    <authorEmail>{{authorEmail}}</authorEmail>
    <authorUrl>{{authorUrl}}</authorUrl>

    <namespace path="src">{{namespace}}</namespace>

    <files>
        <filename module="{{element}}">{{element}}.php</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>services</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_DESC_LAYOUT" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="prepare_content" type="radio" layout="joomla.form.field.radio.switcher" label="COM_MODULES_FIELD_PREPARE_CONTENT_LABEL" description="COM_MODULES_FIELD_PREPARE_CONTENT_DESC" default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
